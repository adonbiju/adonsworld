 <section id="main">
 <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Add Products</h3>
                </div>
            </div>
        </div>
    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Enter the details of the products</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form method="POST" enctype="multipart/form-data" action="/admin/add-products" class="form">
                                <div class="row">
                                    <div class="form-group">
                                        <label for="">Product Name</label>
                                        <input type="text" class="form-control" id="" name="name" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Brand</label>
                                        <select class="form-control" name="brand" id="">
                                            <option value="Acer">Acer </option>
                                            <option value="Asus">Asus </option>
                                            <option value="Hp">Hp </option>
                                            <option value="Dell">Dell</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Description</label>
                                        <input type="text" class="form-control" id="" name="description" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Price</label>
                                        <input type="number" class="form-control" id="" name="price" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Processor</label>
                                        <input type="text" class="form-control" id="" name="processor" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Memory</label>
                                        <input type="text" class="form-control" id="" name="memory" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Storage</label>
                                        <input type="text" class="form-control" id="" name="storage" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Display</label>
                                        <input type="text" class="form-control" id="" name="display" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Graphics</label>
                                        <input type="text" class="form-control" id="" name="graphics" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Battery</label>
                                        <input type="text" class="form-control" id="" name="battery" required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Operating System</label>
                                        <input type="text" class="form-control" id="" name="operating_system"
                                            required />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Image1</label>
                                        <input type="file" class="form-control-file" id="" name="image" required />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image2</label>
                                        <input type="file" class="form-control-file" id="" name="image2" required />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image3</label>
                                        <input type="file" class="form-control-file" id="" name="image3" required />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image4</label>
                                        <input type="file" class="form-control-file" id="" name="image4" required />
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
</section>