<script>
    function viewImg(event) {
        document.getElementById("imgView").src =
        URL.createObjectURL(event.target.files[0]);
    }
     function viewImg2(event) {
        document.getElementById("imgView2").src =
        URL.createObjectURL(event.target.files[0]);
    }
     function viewImg3(event) {
        document.getElementById("imgView3").src =
        URL.createObjectURL(event.target.files[0]);
    }
     function viewImg4(event) {
        document.getElementById("imgView4").src =
        URL.createObjectURL(event.target.files[0]);
    }
</script>

<div id="main">
    <section id="multiple-column-form">
        <div class="row match-height">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add Products</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <form method="POST" enctype="multipart/form-data"
                                action="/admin/edit-products/{{product._id}}">
                                <div class="row">
                                    <div class="form-group">
                                        <label for="">Product Name</label>
                                        <input type="text" class="form-control" id="" name="name"
                                            value="{{product.name}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Brand</label>
                                        <select class="form-control" name="brand" id="">
                                            <option value="{{product.brand}}">{{product.brand}}
                                            </option>
                                            <option value="Acer">Acer </option>
                                            <option value="Asus">Asus </option>
                                            <option value="Hp">Hp </option>
                                            <option value="Dell">Dell</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="">Description</label>
                                        <input type="text" class="form-control" id="" name="description"
                                            value="{{product.description}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Price</label>
                                        <input type="number" class="form-control" id="" name="price"
                                            value="{{product.price}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Processor</label>
                                        <input type="text" class="form-control" id="" name="processor"
                                            value="{{product.processor}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Memory</label>
                                        <input type="text" class="form-control" id="" name="memory"
                                            value="{{product.memory}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Storage</label>
                                        <input type="text" class="form-control" id="" name="storage"
                                            value="{{product.storage}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Display</label>
                                        <input type="text" class="form-control" id="" name="display"
                                            value="{{product.display}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Graphics</label>
                                        <input type="text" class="form-control" id="" name="graphics"
                                            value="{{product.graphics}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Battery</label>
                                        <input type="text" class="form-control" id="" name="battery"
                                            value="{{product.battery}}" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Operating System</label>
                                        <input type="text" class="form-control" id="" name="operating_system"
                                            value="{{product.operating_system}}" />
                                    </div>
                                    <div>
                                        <img src="/images/{{product._id}}.jpg" style="width: 200px;height: 200px;"
                                            alt="" id="imgView" />
                                    </div>
                                    <div class="form-group">
                                        <label for="">Image1</label>
                                        <input type="file" class="form-control-file" id="" name="image"
                                            onchange="viewImg(event)" />
                                    </div>
                                      <div>
                                        <img src="/images/{{product._id}}second.jpg" style="width: 200px;height: 200px;"
                                            alt="" id="imgView2" />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image2</label>
                                        <input type="file" class="form-control-file" id="" name="image2"
                                            onchange="viewImg2(event)" />
                                    </div>
                                      <div>
                                        <img src="/images/{{product._id}}third.jpg" style="width: 200px;height: 200px;"
                                            alt="" id="imgView3" />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image3</label>
                                        <input type="file" class="form-control-file" id="" name="image3"
                                            onchange="viewImg3(event)" />
                                    </div>
                                      <div>
                                        <img src="/images/{{product._id}}fourth.jpg" style="width: 200px;height: 200px;"
                                            alt="" id="imgView4" />
                                    </div>
                                     <div class="form-group">
                                        <label for="">Image4</label>
                                        <input type="file" class="form-control-file" id="" name="image4"
                                            onchange="viewImg4(event)" />
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>