<section class="py-5">
  <div class="container">
    <div class="row mb-5">
      <div class="col-lg-6">
        <!-- PRODUCT SLIDER-->
        <div class="row m-sm-0">
          <div class="col-sm-2 p-sm-0 order-2 order-sm-1 mt-2 mt-sm-0">
            <div class="owl-thumbs d-flex flex-row flex-sm-column" data-slider-id="1">
              <div class="owl-thumb-item flex-fill mb-2 mr-2 mr-sm-0"><img class="w-100"
                  src="/images/{{product._id}}.jpg" alt="..."></div>
              <div class="owl-thumb-item flex-fill mb-2 mr-2 mr-sm-0"><img class="w-100"
                  src="/images/{{product._id}}second.jpg" alt="..."></div>
              <div class="owl-thumb-item flex-fill mb-2 mr-2 mr-sm-0"><img class="w-100"
                  src="/images/{{product._id}}third.jpg" alt="..."></div>
              <div class="owl-thumb-item flex-fill mb-2"><img class="w-100" src="/images/{{product._id}}fourth.jpg" alt="...">
              </div>
            </div>
          </div>
          <div class="col-sm-10 order-1 order-sm-2">
            <div class="owl-carousel product-slider" data-slider-id="1">
           
            <a class="d-block" href="/images/{{product._id}}.jpg" data-lightbox="product" title='{{product.name}}'>
              <img class="img-fluid" src="/images/{{product._id}}.jpg" alt="..." >
            </a>

            <a class="d-block" href="/images/{{product._id}}second.jpg" data-lightbox="product" title='{{product.name}}'>
              <img class="img-fluid" src="/images/{{product._id}}second.jpg"alt="...">
            </a>

            <a class="d-block" href="/images/{{product._id}}third.jpg" data-lightbox="product"title='{{product.name}}'>
              <img class="img-fluid" src="/images/{{product._id}}third.jpg" alt="...">
            </a>

            <a class="d-block" href="/images/{{product._id}}fourth.jpg" data-lightbox="product" title='{{product.name}}'>
               <img class="img-fluid" src="/images/{{product._id}}fourth.jpg" alt="..." >
            </a>
            </div>
          </div>
        </div>
      </div>
      <!-- PRODUCT DETAILS-->
      <div class="col-lg-6">
        <ul class="list-inline mb-2">
          <li class="list-inline-item m-0"><i class="fas fa-star small text-warning"></i></li>
          <li class="list-inline-item m-0"><i class="fas fa-star small text-warning"></i></li>
          <li class="list-inline-item m-0"><i class="fas fa-star small text-warning"></i></li>
          <li class="list-inline-item m-0"><i class="fas fa-star small text-warning"></i></li>
          <li class="list-inline-item m-0"><i class="fas fa-star small text-warning"></i></li>
        </ul>
        <h1>{{product.name}}</h1>
        <p class="text-muted lead">₹{{product.price}}</p>
        <p class="text-small mb-4">{{product.description}}</p>
        <div class="row align-items-stretch mb-4">

          <div class="col-sm-3 pl-sm-0">
            <button onclick="addToCart('{{product._id}}')"
              class="btn btn-dark btn-sm btn-block h-100 d-flex align-items-center justify-content-center px-0">Add to
              cart</button>
          </div>
        </div><a class="btn btn-link text-dark p-0 mb-4" href="#"><i class="far fa-heart mr-2"></i>Add to wish
          list</a><br>
        <ul class="list-unstyled small d-inline-block">
          <li class="px-3 py-2 mb-1 bg-white"><strong class="text-uppercase">Procesor:</strong><span
              class="ml-2 text-muted">{{product.processor}}</span></li>
          <li class="px-3 py-2 mb-1 bg-white"><strong class="text-uppercase">Memory:</strong><span
              class="ml-2 text-muted">{{product.memory}} </span></li>
          <li class="px-3 py-2 mb-1 bg-white"><strong class="text-uppercase">Storage:</strong><span
              class="ml-2 text-muted">{{product.storage}}</span></li>
          <li class="px-3 py-2 mb-1 bg-white"><strong class="text-uppercase">Display:</strong><span
              class="ml-2 text-muted">{{product.display}}</span></li>
          <li class="px-3 py-2 mb-1 bg-white"><strong class="text-uppercase">Graphics:</strong><span
              class="ml-2 text-muted">{{product.graphics}}</span></li>
          <li class="px-3 py-2 mb-1 bg-white"><strong class="text-uppercase">Battery:</strong><span
              class="ml-2 text-muted">{{product.battery}}</span></li>
          <li class="px-3 py-2 mb-1 bg-white"><strong class="text-uppercase">Operating System:</strong><span
              class="ml-2 text-muted">{{product.operating_system}}</span></li>

        </ul>
      </div>
    </div>



    <!-- RELATED PRODUCTS-->
    <h2 class="h5 text-uppercase mb-4">Related products</h2>
    <div class="row">
      <!-- PRODUCT-->
      {{#each relatedproducts}}
      <div class="col-lg-3 col-sm-6">
        <div class="product text-center skel-loader">
          <div class="d-block mb-3 position-relative"><a class="d-block" href="/View-single-products/{{this._id}}"><img
                class="img-fluid w-100" src="/images/{{this._id}}.jpg" alt="..."></a>
            <div class="product-overlay">
              <ul class="mb-0 list-inline">
                <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-outline-dark" href="#"><i
                      class="far fa-heart"></i></a></li>
                <li class="list-inline-item m-0 p-0"><button onclick="addToCart('{{this._id}}')"
                    class="btn btn-sm btn-dark">Add to cart</button></li>
                <li class="list-inline-item mr-0"><a class="btn btn-sm btn-outline-dark"
                    href="/View-single-products/{{this._id}}"><i class="fas fa-expand"></i></a></li>
              </ul>
            </div>
          </div>
          <h6> <a class="reset-anchor">{{this.name}}</a></h6>
          <p class="small text-muted">₹{{this.price}}</p>
        </div>
      </div>
      {{/each}}
    </div>


<!-- Review Section!!!!!!!-->
  
    <ul class="nav nav-tabs border-0" id="myTab" role="tablist">
    <li class="nav-item"><a class="nav-link active" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab"
          aria-controls="reviews" aria-selected="false">Reviews</a>
    </li>
  {{#if user_login}}
   <li class="nav-item"><a class="nav-link " id="description-tab" data-toggle="tab" href="#description"
          role="tab" aria-controls="description" aria-selected="true">Write a Review</a>
    </li>
  {{/if}}
    </ul>
  {{#if user_login}}
    <form action="/review" method="post">
    <div class="tab-content mb-5" id="myTabContent">
      <div class="tab-pane fade " id="description" role="tabpanel" aria-labelledby="description-tab">
        <div class="p-4 p-lg-5 bg-white">
          <h6 class="text-uppercase">Write product Review</h6>
          <div class="col-lg-6 form-group">
            <label class="text-small text-uppercase" >Review</label>
            <textarea class="form-control form-control-lg" id=""  name="review"></textarea>
             <input type="text" name="userId" value="{{user_login._id}}" hidden> 
              <input type="text" name="prodId" value="{{product._id}}" hidden> 
               <input type="text" name="username" value="{{user_login.name}}" hidden> 
          </div>
          <br>
          <div class="col-lg-12 form-group">
            <button class="btn btn-dark" type="submit">Submit</button>
          </div>
        </div>
      </div>
      {{/if}}
       </form>
      <div class="tab-pane fade show active" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
        <div class="p-4 p-lg-5 bg-white">
          <div class="row">
          {{#if reviewedProducts}}
          {{#if reviewError}}
           <div class="col-lg-8">
              <div class="media mb-3">
                <div class="media-body ml-3">
                  <h6 class="mb-0 text-uppercase">   {{ reviewError}} </h6>
              </div>
            </div>
          </div>
           {{/if}}
           {{#each reviewedProducts}}
            <div class="col-lg-8">
              <div class="media mb-3"><img class="rounded-circle" src="/profile/{{this.user}}.jpg" alt="" width="50">
                <div class="media-body ml-3">
                  <h6 class="mb-0 text-uppercase">{{this.username}}</h6>
                  <p class="small text-muted mb-0 text-uppercase">{{this.date}}</p>
                  <ul class="list-inline mb-1 text-xs">
                    <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                    <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                    <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                    <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                    <li class="list-inline-item m-0"><i class="fas fa-star-half-alt text-warning"></i></li>
                  </ul>
                  <p class="text-small mb-0 text-muted">{{this.review}}.</p>
                </div>
              </div>
            </div>
            {{/each}}
            {{else}}

            {{#if reviewError}}
             <div class="col-lg-8">
              <div class="media mb-3">
                <div class="media-body ml-3">
                  <h6 class="mb-0 text-uppercase">   {{ reviewError}} </h6>
              </div>
            </div>
          </div>
          {{else}}
           <div class="col-lg-8">
              <div class="media mb-3">
                <div class="media-body ml-3">
                  <h6 class="mb-0 text-uppercase">  There aren't any reviews for this product yet </h6>
              </div>
            </div>
          </div>
          {{/if}}
          
       {{/if}}
        </div>
      </div>
     </div>

    
<!-- Review Section End here-->

  </div>
</section>

